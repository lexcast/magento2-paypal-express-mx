<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body ifconfig="payment/paypal_express/active">
        <referenceBlock name="checkout.success" remove="true"/>
        <referenceBlock name="checkout.ppplus.success" remove="true"/>        
        
        <referenceContainer name="content">          
            <block class="qbo\PayPalMX\Block\Checkout\Success" name="checkout.express.success" template="checkout/success.phtml" cacheable="false" />
            <block class="Magento\Checkout\Block\Registration" name="checkout.registration" template="registration.phtml" cacheable="false"/>
        </referenceContainer>
        <container name="order.success.additional.info" label="Order Success Additional Info"/>
    </body>
</page>